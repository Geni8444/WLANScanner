<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/rowItemSSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/wlanscanner_list_ssid"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rowItemLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rowItemBSSID"
        android:layout_alignBottom="@+id/rowItemBSSID"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/wlanscanner_diagram_bg"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rowItemChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rowItemLevel"
        android:layout_alignBottom="@+id/rowItemLevel"
        android:background="@color/wlanscanner_list_item_bg"
        android:paddingLeft="2sp"
        android:paddingTop="0sp"
        android:paddingRight="2sp"
        android:paddingBottom="0sp"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rowItemChannelWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/rowItemChannel"
        android:layout_alignBottom="@+id/rowItemLevel"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/rowItemFrequencyBand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@id/rowItemSSID"
        android:padding="5sp"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/rowItemWLANStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@id/rowItemFrequencyBand"
        android:paddingTop="5sp"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/rowItemCapabilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowItemSSID"
        android:layout_alignParentLeft="true"
        android:maxLines="1"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rowItemBSSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowItemCapabilities"
        android:layout_alignParentLeft="true"
        android:textColor="@color/wlanscanner_list_item_color1"
        android:textSize="12sp" />

</RelativeLayout>