<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_permission_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/wlanscanner_dialog_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_permission_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/wlanscanner_dialog_special"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_permission_info_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:autoLink="web"
        android:text="https://developer.android.com/guide/topics/connectivity/wifi-scan#wifi-scan-permissions"
        android:textColor="@color/wlanscanner_dialog_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_dialog_permission_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/wlanscanner_dialog_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/wlanscanner_dialog_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_dialog_ok"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonselector"
            android:clickable="true"
            android:text="Ok"
            android:textSize="16sp"
            android:textColor="@color/wlanscanner_button_text" />
    </LinearLayout>

</LinearLayout>